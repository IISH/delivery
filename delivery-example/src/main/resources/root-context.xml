<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:tx="http://www.springframework.org/schema/tx"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx.xsd">


   <bean id="validator"
    class="org.springframework.validation.beanvalidation.LocalValidatorFactoryBean" />

  <!-- General config parameters of the application -->
  <import resource="config.xml" />

  <!-- Template configuration -->
  <import resource="mail.xml" />

  <!-- Database configuration -->
  <import resource="db.xml" />

  <!-- Template configuration -->
  <import resource="templates.xml" />

  <!-- Localization configuration -->
  <import resource="localization.xml" />

  <!-- Spring Security configuration -->
  <import resource="security.xml" />

  <bean id="myLookupService" class="org.socialhistoryservices.delivery.api.IISHRecordLookupService">
    <property name="properties" ref="myCustomProperties"/>
  </bean>

  <bean id="payWayService" class="org.socialhistoryservices.delivery.api.PayWayService">
    <constructor-arg name="address" value="${prop_payWayAddress}"/>
    <constructor-arg name="passPhraseIn" value="${prop_payWayPassPhraseIn}"/>
    <constructor-arg name="passPhraseOut" value="${prop_payWayPassPhraseOut}"/>
    <constructor-arg name="projectName" value="${prop_payWayProjectName}"/>
  </bean>

  <bean id="sharedObjectRepositoryService" class="org.socialhistoryservices.delivery.api.SharedObjectRepositoryService">
  </bean>
</beans>
